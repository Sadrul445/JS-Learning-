                            
                   //JS-CODE

var MyVar = document.querySelector(".para");                //kon class hobe sheta find korte hbe first e 
MyVar.addEventListener("mouseover",function(){ 
                                                             //addEventListener diye (mouserover,mouseout,click etc add korte hbe qtation mark er mddhe)
                                                              //mouseover means when cursor going in the paragraph, it will will changing the style

    MyVar.classList.add("para-style");                      //css class name add korte hbe ekhane

})
MyVar.addEventListener("mouseout",function(){               //anonymous function call kore mouseout dile ager moton hoye jabe font type

    MyVar.classList.remove("para-style");

})

                  <!--HTML CODE-->
                  
