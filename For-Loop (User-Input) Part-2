            var num2 = parseFloat(prompt("Enter Your Second Number : "));
            var sum = num1 + num2 ;
            
            document.write(" Total =$" +sum.toFixed(2));  
              
   //OutPut: Total =$22.50 Total =$35.00 Total =$30.00 Total =$80.00 Total =$300.00
            
