    <body>
        <p class="para" style="font-size: 4rem;">Hello BanglaDesh </p>

        <button onclick="addStyle()">Add FontStyle</button>
        <button onclick="removeStyle()">Remove FontStyle</button>
<script src="index.js"></script>
        
