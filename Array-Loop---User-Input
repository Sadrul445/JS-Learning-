    <body>
        <h1>Array-Loop using by User-Input</h1>

        <script> 
           var num = new Array();
            var sum = 0 ;
            for(i = 0 ; i <3 ; i++){
                num[i] = parseInt(prompt("Enter a number : "));
            }

            
            
            for(i = 0 ; i <3 ; i++)
             {
                 document.write(num[i])
                 sum = sum + num[i];
             }
                document.write("Total-Amount: " +sum);
        
        </script>
        
    </body>
